{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2016",
      "es2017.object"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "../wwwroot/dist",
    "sourceRoot": "./src/",
    "rootDir": "./src/"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
