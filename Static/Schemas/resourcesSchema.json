{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/resourceSchema",
    "definitions": {
        "resourceSchema": {
            "type" : "object",
            "additionalProperties": false,
            "properties": {
                "$schema": {
					"title": "$schema"
				},
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/resource"
                    },
                    "minLength": 1
                }
            },
            "required": [
                "items"
            ]
        },
        "resource": {
            "type" : "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "$ref": "#/definitions/type"
                },
                "name": {
                    "$ref": "enums.json#/definitions/resourceName"
                },
                "regenRate": {
                    "type": "number",
                    "minimum": 0
                },
                "max": {
                    "type": "number",
                    "minimum": 0
                }

            },
            "required": [
                "name",
                "type",
                "regenRate",
                "max"
            ]
        },
        "type": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "$ref": "enums.json#/definitions/resourceType"
                },
                "useRate": {
                    "type": "number",
                    "minimum": 1
                }
            },
            "required": [
                "name"
            ]
        }
    }
}
